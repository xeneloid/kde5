# Description : Job-based API for interacting with IMAP servers 
# URL : https://projects.kde.org/projects/kde/pim/
# Packager : pierre at nutyx dot org
# Depends on : kf5-extra-cmake-modules python kf5-kdoctools kf5-kdelibs4support kmime boost cyrus-sasl

name=kimap
version=16.04.2
release=1

source=( http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz)

build() {

  mkdir build
  cd build
  cmake ../$name-$version \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF
  make
  make DESTDIR=$PKG install
}
